{
	"name": "redalerts",
	"displayName": "Red Alerts Notifier",
	"description": "",
	"icon": "assets/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/Mevaser/Vscode-RedAlerts.git"
	},
	"publisher": "Mevaser",
	"version": "1.3.0",
	"engines": {
		"vscode": "^1.56.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Red Alerts",
			"properties": {
				"redAlerts.pollingInterval": {
					"type": "number",
					"default": 10,
					"description": "The interval to delay the alerts in sec."
				},
				"redAlerts.areas": {
					"type": "array",
					"description": "The areas to delay the alerts for. (for example: ['אשקלון', 'אשדוד', 'באר שבע'])"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.56.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"axios": "^0.21.1",
		"path": "^0.12.7",
		"sound-play": "^1.1.0"
	}
}
